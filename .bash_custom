# should manually source this with:
# source ~/.bash_custom
export EDITOR=vim
set -o vi

# larger history
export HISTSIZE=10000
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups

# alias
if [ -f `which ack-grep` ]; then
    alias ack="ack-grep"
fi

# easier navigation: .., ..., ...., .....
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."

alias ll="ls -alh"
alias clang11="clang++ --std=c++11 -stdlib=libc++"
alias gmake="make"



